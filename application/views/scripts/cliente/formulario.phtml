<script>
    $(function(){
        $('#cep').change(function () {
            var cep = $('#cep').val();
            $.ajax({
                url:'https://viacep.com.br/ws/'+ cep +'/json/',
                success: function (dados) {
                    $('#uf').val(dados.uf);
                    $('#localidade').val(dados.localidade);
                    $('#bairro').val(dados.bairro);
                    $('#logradouro').val(dados.logradouro);
                    $('#complemento').val(dados.complemento);
                }
            })
        })
    })
</script>